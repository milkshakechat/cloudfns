{
  "name": "functions",
  "scripts": {
    "clean": "rimraf lib",
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy:specific": "firebase deploy --only functions:onpurchaseintentsuccess",
    "deploy:staging": "npm run clean && firebase use milkshake-dev-faf77 && npm run build && firebase deploy --only functions",
    "deploy:production": "NODE_ENV=production && npm run clean && firebase use milkshake-club && npm run build && firebase deploy --only functions --project milkshake-club",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@google-cloud/secret-manager": "^4.2.2",
    "@google-cloud/video-transcoder": "^2.6.0",
    "@milkshakechat/helpers": "^1.0.292-i18n",
    "axios": "^1.4.0",
    "child-process-promise": "^2.2.1",
    "dotenv": "^16.1.4",
    "ffmpeg-static": "^5.1.0",
    "firebase": "^9.22.2",
    "firebase-admin": "^11.8.0",
    "firebase-functions": "^4.3.1",
    "fluent-ffmpeg": "^2.1.2",
    "mkdirp": "^3.0.1",
    "rimraf": "^5.0.1",
    "stripe": "^12.12.0"
  },
  "devDependencies": {
    "@types/child-process-promise": "^2.2.2",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^4.9.0"
  },
  "private": true
}
